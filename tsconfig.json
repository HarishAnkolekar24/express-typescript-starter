{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "sourceMap": true,
        "outDir": "./dist",
        "importHelpers": true,
        "strict": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "typeRoots": ["node_modules/@types"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["ES6"]
    },
    "include": ["src/**/*.ts"]
}
